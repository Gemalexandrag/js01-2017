            var story = words[0] + "! he said " + words[1] + " as he jumped into his convertible " + words[2] + " and drove off with his " + words[3] + " wife."
              for (var i = 0; i < inputs.length; i++) {      var addendString = inputs[i].words;      }      var div = document.getElementById("story");      div.innerHTML = story;    }
